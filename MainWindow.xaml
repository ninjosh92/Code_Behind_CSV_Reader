<Window x:Class="Code_Behind_CSV_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Behind_CSV_Reader"
        xmlns:User_Controls="clr-namespace:Code_Behind_CSV_Reader.User_Controls"
        mc:Ignorable="d"
        Title="CSV Reader" Height="450" Width="800"
        ResizeMode="NoResize"
        Background="#181735">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Background="#0f0f2d" 
              Grid.ColumnSpan="4"
              MouseDown="Grid_MouseDown"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Launchpad"
                       Margin="5"
                       Grid.ColumnSpan="3"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Fonts/#Mass Effect Game 123"/>
            <TextBlock Text="Menu"
                       Margin="5"
                       Grid.ColumnSpan="3"
                       Foreground="LightGray"
                       Grid.Column="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Fonts/#Mass Effect Game 123"/>
            <TextBlock Text="Website"
                       Margin="5"
                       Grid.ColumnSpan="3"
                       Foreground="LightGray"
                       Grid.Column="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Fonts/#Mass Effect Game 123"/>
            <Button x:Name="Exit_Button" 
                    Click="Exit_Button_Click"
                    Grid.Column="11" 
                    Grid.ColumnSpan="2" 
                    Content="Exit"
                    Foreground="White"
                    FontSize="14" 
                    FontFamily="Fonts/#Mass Effect Game 123"
                    FontWeight="Medium">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Mass Effect Game 123"/>
                        <Setter Property="Background" Value="#fe6584"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="AliceBlue"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="65" Height="20"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>


        </Grid>

        <StackPanel Grid.Row="1" Grid.RowSpan="3" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Image Width="40" Height="40"
                       Source="Images/user.png"/>
                <TextBlock Text="User_Name"
                           Foreground="AntiqueWhite"
                           FontSize="10"
                           FontFamily="Fonts/#Mass Effect Game 123"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Start_Button" Content="Start"
                        Foreground="White"
                        FontSize="14" 
                        FontFamily="Fonts/#Mass Effect Game 123"
                        FontWeight="Medium">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Mass Effect Game 123"/>
                            <Setter Property="Background" Value="#fe6584"/>
                            <Setter Property="Cursor" Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="AliceBlue"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </StackPanel>
            <StackPanel Height="328">
                <User_Controls:DragMenu Height="300" Loaded="DragMenu_Loaded"></User_Controls:DragMenu>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3">
            <User_Controls:DropCanvas Height="260"/>
        </StackPanel>

        <Label Grid.Column="1" Grid.Row="3" x:Name="Lox_Label" Content="Lox" Foreground="AntiqueWhite"/>
        <Label Grid.Column="2" Grid.Row="3" x:Name="HighPress_Label" Content="High Press" Foreground="AntiqueWhite"/>
        <Label Grid.Column="3" Grid.Row="3" x:Name="Fuel_Label" Content="Fuel" Foreground="AntiqueWhite"/>



    </Grid>
</Window>
