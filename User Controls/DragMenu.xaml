<UserControl x:Class="Code_Behind_CSV_Reader.User_Controls.DragMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Code_Behind_CSV_Reader.User_Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="AliceBlue" BorderThickness="2">
        <Canvas 
            x:Name="dragCanvas" 
            AllowDrop="True"
            DragOver="dragCanvas_DragOver"
            DragLeave="dragCanvas_DragLeave"
            Drop="dragCanvas_Drop"
            Background="Transparent">

            <Image
               x:Name="testImage"
                IsHitTestVisible="{Binding IsChildHitTestVisible, ElementName=root}"
                Canvas.Left="50"
                Canvas.Top="56"
                Width="50"
                Height="50"
                Source="/Images/Tank1.png"
                MouseMove="menuItem_MouseMove"
                />





        </Canvas>
    </Border>
</UserControl>
