<UserControl x:Class="Code_Behind_CSV_Reader.User_Controls.DropCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Code_Behind_CSV_Reader.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="AliceBlue"
            BorderThickness="2">
        <Canvas
            x:Name="dropCanvas" 
            AllowDrop="True"
            Background="Transparent"
            DragLeave="dropCanvas_DragLeave"
            DragOver="dropCanvas_DragOver"
            Drop="dropCanvas_Drop" >

        </Canvas>
    </Border>
</UserControl>
